<xml>
    <block type="variables_set" id="0" x="10" y="10">
        <field name="VAR">counter</field>
        <value name="VALUE">
            <block type="math_number" id="1">
                <field name="NUM">0</field>
            </block>
        </value>
        <next>
            <block type="controls_repeat_ext" id="2" x="10" y="80">
                <value name="TIMES">
                    <block type="math_number" id="3">
                        <field name="NUM">10</field>
                    </block>
                </value>
                <statement name="DO">
                    <block type="variables_set" id="4" x="10" y="150">
                        <field name="VAR">sensor_value</field>
                        <value name="VALUE">
                            <block type="text_prompt_ext" id="5">
                                <field name="TYPE">NUMBER</field>
                                <field name="TEXT"></field>
                            </block>
                        </value>
                        <next>
                            <block type="controls_if" id="6" x="10" y="220">
                                <mutation else="1"></mutation>
                                <value name="IF0">
                                    <block type="logic_compare" id="7">
                                        <field name="OP">NEQ</field>
                                        <value name="A">
                                            <block type="variables_get" id="8">
                                                <field name="VAR">sensor_value</field>
                                            </block>
                                        </value>
                                        <value name="B">
                                            <block type="math_number" id="9">
                                                <field name="NUM">100</field>
                                            </block>
                                        </value>
                                    </block>
                                </value>
                                <statement name="DO0">
                                    <block type="text_print" id="10">
                                        <value name="TEXT">
                                            <block type="text" id="11">
                                                <field name="TEXT">Sampling rate exceeded!</field>
                                            </block>
                                        </value>
                                    </block>
                                </statement>
                                <statement name="ELSE">
                                    <block type="variables_set" id="12">
                                        <field name="VAR">counter</field>
                                        <value name="VALUE">
                                            <block type="math_arithmetic" id="13">
                                                <field name="OP">ADD</field>
                                                <value name="A">
                                                    <block type="variables_get" id="14">
                                                        <field name="VAR">counter</field>
                                                    </block>
                                                </value>
                                                <value name="B">
                                                    <block type="math_number" id="15">
                                                        <field name="NUM">1</field>
                                                    </block>
                                                </value>
                                            </block>
                                        </value>
                                    </block>
                                </statement>
                            </block>
                        </next>
                    </block>
                </statement>
            </block>
        </next>
    </block>
</xml>
