<xml xmlns="https://developers.google.com/blockly/xml">

    <block type="variables_set" id="set_autonomy" x="100" y="100">
        <field name="VAR">autonomy_time</field>
        <value name="VALUE">
            <block type="math_number" id="autonomy_input">
                <field name="NUM">100</field>
            </block>
        </value>
        <next>


            <block type="controls_if" id="if_endurance">
                <mutation else="0"></mutation>

                <value name="IF0">
                    <block type="logic_compare" id="cmp_time">
                        <field name="OP">GTE</field>
                        <value name="A">
                            <block type="variables_get" id="get_autonomy">
                                <field name="VAR">autonomy_time</field>
                            </block>
                        </value>
                        <value name="B">
                            <block type="math_number" id="threshold">
                                <field name="NUM">100</field>
                            </block>
                        </value>
                    </block>
                </value>


                <statement name="DO0">
                    <block type="text_print" id="print_success">
                        <value name="TEXT">
                            <block type="text" id="success_text">
                                <field name="TEXT">Sustained autonomy planned.</field>
                            </block>
                        </value>
                    </block>
                </statement>

            </block>
        </next>
    </block>

</xml>
  