<xml>
    <block type="variables_set" id="0" x="10" y="10">
        <field name="VAR">reading</field>
        <value name="VALUE">
            <block type="text_prompt_ext" id="1">
                <field name="TYPE">TEXT</field>
                <field name="TEXT"></field>
            </block>
        </value>
        <next>
            <block type="controls_if" id="2" x="10" y="80">
                <mutation else="1"></mutation>
                <value name="IF0">
                    <block type="logic_compare" id="3">
                        <field name="OP">EQ</field>
                        <value name="A">
                            <block type="variables_get" id="4">
                                <field name="VAR">reading</field>
                            </block>
                        </value>
                        <value name="B">
                            <block type="text" id="5">
                                <field name="TEXT">unsafe</field>
                            </block>
                        </value>
                    </block>
                </value>
                <statement name="DO0">
                    <block type="variables_set" id="6">
                        <field name="VAR">system</field>
                        <value name="VALUE">
                            <block type="text" id="7">
                                <field name="TEXT">stopped</field>
                            </block>
                        </value>
                        <next>
                            <block type="text_print" id="8">
                                <value name="TEXT">
                                    <block type="variables_get" id="9">
                                        <field name="VAR">system</field>
                                    </block>
                                </value>
                            </block>
                        </next>
                    </block>
                </statement>
                <statement name="ELSE">
                    <block type="text_print" id="10">
                        <value name="TEXT">
                            <block type="text" id="11">
                                <field name="TEXT">System operational</field>
                            </block>
                        </value>
                    </block>
                </statement>
            </block>
        </next>
    </block>
</xml>
