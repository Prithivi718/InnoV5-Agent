<xml>
    <block type="variables_set" id="0" x="10" y="10">
        <field name="VAR">limit</field>
        <value name="VALUE">
            <block type="math_number" id="1">
                <field name="NUM">100</field>
            </block>
        </value>
        <next>
            <block type="variables_set" id="2" x="10" y="80">
                <field name="VAR">current_value</field>
                <value name="VALUE">
                    <block type="text_prompt_ext" id="3">
                        <field name="TYPE">NUMBER</field>
                        <field name="TEXT"></field>
                    </block>
                </value>
                <next>
                    <block type="controls_if" id="5" x="10" y="150">
                        <mutation else="1"></mutation>
                        <value name="IF0">
                            <block type="logic_compare" id="6">
                                <field name="OP">LT</field>
                                <value name="A">
                                    <block type="variables_get" id="7">
                                        <field name="VAR">current_value</field>
                                    </block>
                                </value>
                                <value name="B">
                                    <block type="variables_get" id="8">
                                        <field name="VAR">limit</field>
                                    </block>
                                </value>
                            </block>
                        </value>
                        <statement name="DO0">
                            <block type="variables_set" id="9">
                                <field name="VAR">current_value</field>
                                <value name="VALUE">
                                    <block type="math_arithmetic" id="10">
                                        <field name="OP">MINUS</field>
                                        <value name="A">
                                            <block type="variables_get" id="11">
                                                <field name="VAR">current_value</field>
                                            </block>
                                        </value>
                                        <value name="B">
                                            <block type="math_number" id="12">
                                                <field name="NUM">1</field>
                                            </block>
                                        </value>
                                    </block>
                                </value>
                            </block>
                        </statement>
                        <statement name="ELSE">
                            <block type="text_print" id="13">
                                <value name="TEXT">
                                    <block type="text" id="14">
                                        <field name="TEXT">Exceeded limit!</field>
                                    </block>
                                </value>
                            </block>
                        </statement>
                    </block>
                </next>
            </block>
        </next>
    </block>
</xml>